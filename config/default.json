{
    "JWT_PRIVATE_KEY": "",

    "services": [
        {
            "name": "users",
            "url": "http://localhost:5000",
            "routes": [
                {
                    "path": "/users",
                    "method": "GET",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/users/:userId",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/users",
                    "method": "POST",
                    "permissions": []
                },
                {
                    "path": "/users/:userId",
                    "method": "PUT",
                    "permissions": ["auth"]
                },
                {
                    "path": "/users",
                    "method": "DELETE",
                    "permissions": ["auth"]
                }
            ]
        },
        {
            "name": "books",
            "url": "http://localhost:3000",
            "routes": [
                {
                    "path": "/books/admin",
                    "method": "POST",
                    "permissions": ["auth", "admin"],
                    "formData": true
                },
                {
                    "path": "/books",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/getBook/:bookId",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/admin/:bookId",
                    "method": "PATCH",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/books/admin/:bookId",
                    "method": "DELETE",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/books/search",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/file/:bookId",
                    "method": "GET",
                    "permissions": ["auth"]
                }
            ]
        },
        {
            "name": "auth",
            "url": "http://localhost:4000",
            "routes": [
                {
                    "path": "/auth/login",
                    "method": "POST",
                    "permissions": []
                },
                {
                    "path": "/auth/signup",
                    "method": "POST",
                    "permissions": []
                }
            ]
        },
        {
            "name": "orders",
            "url": "http://localhost:6000",
            "routes": [
                {
                    "path": "/orders/:bookId",
                    "method": "POST",
                    "permissions": ["auth"]
                },
                {
                    "path": "/orders/:orderId/:bookId",
                    "method": "PATCH",
                    "permissions": ["auth"]
                },
                {
                    "path": "/orders/:orderId",
                    "method": "DELETE",
                    "permissions": ["auth"]
                },
                {
                    "path": "/orders/:orderId",
                    "method": "GET",
                    "permissions": ["auth"]
                },
                {
                    "path": "/orders",
                    "method": "GET",
                    "permissions": ["auth"]
                }
            ]
        }
    ]
}