{
    "JWT_PRIVATE_KEY": "",

    "services": [
        {
            "name": "users",
            "url": "http://localhost:5000",
            "routes": [
                {
                    "path": "/users",
                    "method": "GET",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/users/:userId",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/users",
                    "method": "POST",
                    "permissions": []
                },
                {
                    "path": "/users/:userId",
                    "method": "PUT",
                    "permissions": ["auth"]
                },
                {
                    "path": "/users/:userId",
                    "method": "DELETE",
                    "permissions": ["auth"]
                }
            ]
        },
        {
            "name": "books",
            "url": "http://localhost:3000",
            "routes": [
                {
                    "path": "/books/admin",
                    "method": "POST",
                    "permissions": ["auth", "admin"] 
                },
                {
                    "path": "/books",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/:bookId",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/admin/:bookId",
                    "method": "PATCH",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/books/admin/:bookId",
                    "method": "DELETE",
                    "permissions": ["auth", "admin"]
                },
                {
                    "path": "/books/search",
                    "method": "GET",
                    "permissions": []
                },
                {
                    "path": "/books/file/:bookId",
                    "method": "GET",
                    "permissions": ["auth"]
                }
            ]
        }
    ]
}